<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2" >

    <ListView
        android:id="@+id/listView_comment"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvpost"
        android:layout_marginTop="38dp" >
    </ListView>

    <TextView
        android:id="@+id/tvpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:gravity="center"
        android:text="Post details"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b_cmnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listView_comment"
        android:layout_marginTop="46dp"
        android:text="Comment"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/et_cmnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b_cmnt"
        android:layout_alignBottom="@+id/b_cmnt"
        android:layout_toLeftOf="@+id/b_cmnt"
        android:ems="10"
        android:gravity="center"
        android:hint="Comment here "
        android:textColor="#ffffff"
        android:textStyle="bold" >

        <requestFocus />
    </EditText>

</RelativeLayout>
