<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="@drawable/bg2" >

    <TextView
        android:id="@+id/textwelcomeuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:text="Welcome user"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textwelcomeuser"
        android:layout_alignRight="@+id/button_post"
        android:layout_below="@+id/textwelcomeuser"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:hint="Enter Topic here :" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/listViewpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editpost"
        android:layout_alignRight="@+id/button_post"
        android:layout_below="@+id/button_post" >

    </ListView>

    <Button
        android:id="@+id/button_post"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editpost"
        android:layout_marginRight="33dp"
        android:text="Post"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>
